  style.
    body {
    --color-primary: #009579;
    --color-primary-dark: #007f67;
    --color-secondary: #252c6a;
    --color-error: #cc3333;
    --color-success: #4bb544;
    --border-radius: 4px;
    margin: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 19;
    background: url(./pics/pic2.jpg);
    background-size: cover;
    }
    .container {
    width: 500px;
    max-width: 500px;
    margin: 1rem;
    padding: 2rem;
    box-shadow: 0 0 40px rgba(0, 0, 0, 0.4);
    border-radius: var(--border-radius);
    background: white;
    }
    .container,
    #userButton,
    #adminButton {
    font: 500 1rem 'Quicksand', sans-serif;
    }
    .container form h1 {
    margin-top: 0;
    text-align: center;
    }
    .form__input-group {
    margin-bottom: 1rem;
    }
    .form__input {
    display: block;
    width: 100%;
    padding: 0.75rem;
    box-sizing: border-box;
    border-radius: var(--border-radius);
    border: 1px solid #dddddd;
    outline: none;
    background: #eeeeee;
    transition: background 0.2s, border-color 0.2s;
    }
    .form__input:focus {
    border-color: var(--color-secondary);
    background-color: #fff;
    }
    #userButton,
    #adminButton {
    margin-bottom: 10px;
    width: 100%;
    padding: 1rem 2rem;
    font-weight: bold;
    font-size: 1.1rem;
    color: #fff;
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    background-color: var(--color-primary);
    }
    #userButton:hover {
    background: white;
    color: var(--color-secondary);
    }
    #adminButton:hover {
    background: white;
    color: var(--color-secondary);
    }
    #userButton,
    #adminButton:active {
    transform: scale(0.98);
    }
